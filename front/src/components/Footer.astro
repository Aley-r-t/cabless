---
import { Image } from "astro:assets";
import ReclamacionesImage from "../assets/reclamaciones.png";
import LineaNaranjaImage from "../assets/lineaNaranja.png";
import Facebook from "../assets/facebook.png";
import Youtube from "../assets/youtube.png";
import Linkd from "../assets/lindin.png";
import Instagram from "../assets/instagram.png"; 

---
<footer class="cl-footer">
  <Image class="cl-topbar" src={LineaNaranjaImage} alt="Línea Naranja" />
  <div class="cl-wrap">
    <div class="cl-grid">
      <!-- Col 1: Logo + descripción + redes -->
      <div class="cl-col cl-col--brand">
        <a href="/" class="cl-logo">
          <img src="/logoblanco.png" alt="Cable Laser" />
        </a>
        <p class="cl-desc">
          Somos una empresa peruana de telecomunicaciones y brindamos servicios para el hogar y/o negocios.
        </p>
        <ul class="cl-social" aria-label="Redes sociales">
          <li><a aria-label="Facebook" href="#"><Image src={Facebook} alt={"Facebook"}></Image></a></li>
          <li><a aria-label="YouTube" href="#"><Image src={Youtube} alt={"Youtube"}></Image></a></li>
          <li><a aria-label="LinkedIn" href="#"><Image src={Linkd} alt={"LinkedLin"}></a></li>
          <li><a aria-label="Instagram" href="#"><Image src={Instagram} alt={"Instagram"}></a></li>
        </ul>
      </div>

      <!-- Col 2: Sobre + Contacto -->
      <div class="cl-col">
        <h3 class="cl-title">Sobre Cable Laser</h3>
        <ul class="cl-links">
          <li><a href="#">¿Quiénes somos?</a></li>
        </ul>

        <div class="cl-box mt-24">
          <h3 class="cl-title">Contacto</h3>
          <ul class="cl-contact">
            <li><strong>Información:</strong> <a href="tel:+51932555005">932 555 005</a></li>
            <li><strong>Ventas:</strong> <a href="tel:+51934475748">934 475 748</a></li>
            <li><strong>Cobranza:</strong> <a href="tel:+51989367809">989 367 809</a></li>
          </ul>

          <div class="cl-claims">
            <p class="cl-claims-title">LIBRO DE<br/>RECLAMACIONES</p>
            <div class="cl-claims-icon">
              <Image src={ReclamacionesImage} alt="Libro de Reclamaciones" />
            </div>
          </div>
        </div>
      </div>

      <!-- Col 3: Ayuda -->
      <div class="cl-col">
        <h3 class="cl-title">Ayuda</h3>
        <ul class="cl-links">
          <li><a href="#">Preguntas frecuentes</a></li>
          <li><a href="#">Cobertura</a></li>
          <li><a href="#">Contacto</a></li>
          <li><a href="#">Número de Cuenta</a></li>
        </ul>
      </div>

      <!-- Col 4: Dirección -->
      <div class="cl-col">
        <h3 class="cl-title">Dirección</h3>
        <address class="cl-address">
          <p>Mz “N” Lt 41</p>
          <p>Miguel Grau - Chaclacayo</p>
        </address>
      </div>
    </div>
  </div>

  <div class="cl-bottombar">
    <div class="cl-bottom">
      <p>Copyright © 2025 Cable Laser</p>
      <a href="#" class="cl-terms">Términos y condiciones</a>
    </div>
  </div>
</footer>

<style>
/* Base */
.cl-footer{font-family:system-ui,-apple-system,Segoe UI,Roboto,Ubuntu,Inter,sans-serif;background:#0C1D46;color:#fff}
.cl-topbar{height:105px;width:100%;background:#EA580C}

/* Contenedor */
.cl-wrap{padding:56px 24px}
.cl-grid{max-width:1280px;margin:0 auto;display:grid;gap:36px;
  grid-template-columns:2fr 1fr 1fr 1fr;align-items:start}

/* Columna marca (más ancha) */
.cl-col--brand .cl-logo img{width:260px;height:auto;display:block}
.cl-desc{margin:16px 0 20px;color:rgba(255,255,255,.9);font-size:15px;line-height:1.6;max-width:420px}

/* Redes sociales */

.cl-social {
  display: flex;
  gap: 20px;
  list-style: none;
  padding: 0;
  margin: 0;
}

.cl-social a {
  display: grid;
  place-items: center;
  width: 45px; 
  height: 45px; 
  border-radius: 50%;
  background: transparent;
  position: relative;
}

.cl-social img {
  width: 40px; 
  height: 38px;
  display: block;
  transition: transform .2s ease-in-out;
}

.cl-social a:hover {
  background: #ff6a00d5;
  box-shadow: 0 0 10px var(---orange); 
  transform: scale(1); 
}

.cl-social a:active {
  transform: translateY(1px);
}

.cl-social a:hover img {
  transform: scale(1.2);
}

/* Títulos / listas */
.cl-title{font-size:18px;font-weight:700;margin:0 0 14px}
.cl-links{list-style:none;padding:0;margin:0}
.cl-links li{margin:8px 0}
.cl-links a{color:rgba(255,255,255,.85);text-decoration:none;font-size:14px}
.cl-links a:hover{color:#fff}

/* Contacto + libro */
.cl-box{position:relative}
.mt-24{margin-top:24px}
.cl-contact{list-style:none;padding:0;margin:0}
.cl-contact li{margin:6px 0;font-size:14px;color:rgba(255,255,255,.9)}
.cl-contact a{color:#fff;text-decoration:none}
.cl-contact a:hover{text-decoration:underline}

/* Libro de reclamaciones */
.cl-claims{display:flex;align-items:center;gap:12px;margin-top:16px}
.cl-claims-title{font-size:12px;letter-spacing:.4px;margin:0;text-align:left;line-height:1.2}
.cl-claims-icon{width:64px;height:48px;border:2px dashed rgba(255,255,255,.35);
  border-radius:6px;display:flex;align-items:center;justify-content:center;background:rgba(255,255,255,.08)}
.cl-claims-icon img{max-width:50px;height:auto}

/* Dirección */
.cl-address{font-style:normal;color:rgba(255,255,255,.9);font-size:14px}
.cl-address p{margin:4px 0}

/* Bottom bar */
.cl-bottombar{background:#01247C}
.cl-bottom{max-width:1280px;margin:0 auto;padding:16px 24px;display:flex;justify-content:space-between;gap:12px;align-items:center}
.cl-bottom p{margin:0;color:rgba(255,255,255,.85);font-size:14px}
.cl-terms{color:rgba(255,255,255,.85);text-decoration:none;font-size:14px}
.cl-terms:hover{color:#fff}

/* Responsive */
@media (max-width:1024px){
  .cl-grid{grid-template-columns:1fr 1fr}
}
@media (max-width:768px){
  .cl-wrap{padding:40px 16px}
  .cl-grid{grid-template-columns:1fr}
  .cl-col--brand .cl-logo img{width:220px}
  .cl-bottom{flex-direction:column;text-align:center}
}
</style>