---
import { Image } from "astro:assets";
import eticaImg from "../assets/etica.png";
import puntualidadImg from "../assets/puntualidad.png";
import calidadImg from "../assets/calidad.png";
import disciplinaImg from "../assets/disciplina.png";
import respetoImg from "../assets/respeto.png";
import innovacionImg from "../assets/innovacion.png";

const valores = [
  {
    titulo: "Ética Profesional",
    descripcion: "Actuamos con integridad, incluso cuando nadie mira.",
    imagen: eticaImg,
  },
  {
    titulo: "Puntualidad",
    descripcion: "Cumplimos plazos, no excusas.",
    imagen: puntualidadImg,
  },
  {
    titulo: "Calidad",
    descripcion: "Pixel-Perfect y sin humo: resultados que se notan.",
    imagen: calidadImg,
  },
  {
    titulo: "Disciplina",
    descripcion: "Procesos claros: mejora continua todos los días.",
    imagen: disciplinaImg,
  },
  {
    titulo: "Respeto",
    descripcion: "Trato humano, feedback directo y empático.",
    imagen: respetoImg,
  },
  {
    titulo: "Innovación",
    descripcion: "Probamos, medimos, iteramos siempre en casa.",
    imagen: innovacionImg,
  },
];
---

<div class="valores-grid">
  {
    valores.map((valor) => (
      <div class="valor-card">
        <div class="icon-container">
          <Image src={valor.imagen} alt={valor.titulo} width={50} height={50} />
        </div>
        <h3 class="valor-titulo">{valor.titulo}</h3>
        <p class="valor-descripcion">{valor.descripcion}</p>
      </div>
    ))
  }
</div>

<style>
  .valores-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 20px;
    padding: 0 20px;
    max-width: 1200px;
    margin: 40px auto;
  }

  .valor-card {
    background-color: #f5f6f8; /* gris ligeramente más pronunciado */
    border-radius: 12px;
    padding: 30px;
    text-align: center;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start; /* asegura alineación vertical */
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    min-height: 200px; /* altura mínima para consistencia */
  }

  .valor-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
  }

  .icon-container {
    padding: 15px; /* padding ligeramente mayor */
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 20px;
    width: 80px; /* tamaño fijo para consistencia */
    height: 90px;
    flex-shrink: 0; /* evita que se comprima */
  }

  .valor-titulo {
  font-size: 30px;
  font-weight: 900;
  font-style: italic; /* Aplica cursiva */
  color: #0c1d46;
  margin: 0 0 15px 0;
  text-align: center;
}


  .valor-descripcion {
    font-size: 1rem;
    color: #555;
    line-height: 1.5;
    margin: 0;
    text-align: center;
  }

  /* Responsivo para pantallas pequeñas */
  @media (max-width: 480px) {
    .valores-grid {
      grid-template-columns: 1fr;
      gap: 15px;
      padding: 0 15px;
    }
    
    .valor-card {
      padding: 25px;
      min-height: auto;
    }
    
    .icon-container {
      width: 70px;
      height: 70px;
      padding: 12px;
    }
  }
</style>