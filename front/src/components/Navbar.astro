---
const links = [
  { href: "/", label: "Inicio" },
  { href: "/envivo", label: "EN VIVO" },
  { href: "/nosotros", label: "Nosotros" },
  { href: "/servicios", label: "Servicios" },
  { href: "/cobertura", label: "Cobertura" },
];
---
<header class="header">
  <div class="container nav">
<button class="nav__toggle" aria-label="Toggle navigation">
    <svg width="28" height="28" viewBox="0 0 22 22" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
        <path d="M4 6h16M4 12h16M4 18h16"></path>
    </svg>
</button>
    <a href="/" class="brand" aria-label="Cable Laser">
      <img src="/logo-1.png" alt="Cable Laser" />
    </a>
    <nav class="nav__links">
      {links.map((l) => <a class="nav__link" href={l.href}>{l.label}</a>)}
    </nav>
    <a href="tel:017481950" class="btn btn--outline-blue nav__cta hidden md:show" aria-label="Llámanos">
      <!-- phone icon -->
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M6.62 10.79a15.05 15.05 0 006.59 6.59l2.2-2.2a1 1 0 011.05-.24c1.15.38 2.34.57 3.56.57a1 1 0 011 1V20a1 1 0 01-1 1C10.42 21 3 13.58 3 4a1 1 0 011-1h3.5a1 1 0 011 1c0 1.22.19 2.41.57 3.56a1 1 0 01-.25 1.05l-2.2 2.18z"/></svg>
      Ventas: 01 7481950
    </a>
   
  </div>
</header>

<script>
document.addEventListener('DOMContentLoaded', () => {
    const header = document.querySelector('.header');
    if (header) {
        const puntoDePegado = 550; 
        window.addEventListener('scroll', () => {
            if (window.scrollY > puntoDePegado) {
                header.classList.add('fixed-bottom');
            } else {
                header.classList.remove('fixed-bottom');
            }
        });
    } else {
        console.error("No se encontró el elemento con la clase '.header'");
    }
});
document.addEventListener('DOMContentLoaded', () => {
    const toggleButton = document.querySelector('.nav__toggle');
    const navLinks = document.querySelector('.nav__links');
    const mediaQuery = window.matchMedia('(min-width: 768px)'); 
    if (toggleButton && navLinks) {
        toggleButton.addEventListener('click', () => {
            navLinks.classList.toggle('is-open');
        });
        mediaQuery.addEventListener('change', (e) => {
            if (e.matches) {
                navLinks.classList.remove('is-open');
            }
        });
    }
});
</script>

<style>

.btn{
  padding: 12px 20px;
  border-radius: var(--radius-xl);
  font-weight:600;
  text-decoration:none;
  transition: .2s ease;
  margin-right: 50px;
  background-color: var(---blue);
  color: var(---light);
}

.brand{
  margin-top: 10px;
  width: 110px;
  height: 60px;
  margin-left: 100px;
}

.brand img{
  width: 100%;
  height: 100%;
  object-fit: contain;
}

/* Repsonsive */

</style>
