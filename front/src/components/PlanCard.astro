
---
import { Image } from 'astro:assets';
import WhatsAppImage from '../assets/WhatsApp.webp';

const { speed = "50 Mbps", price = 50 } = Astro.props;
---
<div class="card">
<div 
    class="plancard__header" 
    style="font-size: 16px;font-weight:500; gap: 0.3em">
<span>
  <center>
<svg class="icono_cards"
  width="1em" height="1em" viewBox="0 0 24 24"
  fill="none" xmlns="http://www.w3.org/2000/svg"
  stroke="currentColor" stroke-width="3.0" stroke-linecap="round" stroke-linejoin="round">
  <rect x="2" y="6" width="19" height="14" rx="2" ry="2" />
  <line x1="10" y1="6" x2="7" y2="2" />
  <line x1="14" y1="6" x2="17" y2="2" />
</svg>
  </svg>
  Cable HD
</span>
    <span class="suma" style="font-size: 20px;" ><br>+<br></span>
 <span >
  <svg class="icono_cards"
    width="1.1em" height="1.3em" viewBox="4 8 16 16" 
    fill="none" xmlns="http://www.w3.org/2000/svg"
    stroke="currentColor" stroke-width="2.3" stroke-linecap="round" stroke-linejoin="round">
    <path d="M5 12.5C8 9.5 16 9.5 19 12.5" />
    <path d="M8.5 16C10.5 14 13.5 14 15.5 16" />
    <path d="M12 19.5h0.9" /> 
  </svg>
  Internet Fibra Óptica
</span>

<div class="plancard__speed" style="font-size: 30px; font-weight: 700;">{speed}</div>

<div class="plancard__price" style="color: #ff6a00">
  <span class="currency" style="font-size: 25px">S/</span> <span class="price" style="font-size: 80px; font-weight: 700;">{price}</span><br>
</div>

  <span class="mensual" style=font-size:25px;font-weight:500;">Mensual</span></div></center>
</center>
<center><div class="plancard__foot" style="font-style: italic; font-size:14px; font-weight: 400;">*Instalación gratuita</div>


<section class="position_actions">
<a
  class="plancard__action"
  href={`https://wa.me/51999999999?text=Quiero%20el%20plan%20${price}%20${speed}`}
  aria-label="Quiero este plan"
  target="_blank"
  rel="noopener noreferrer"
>

  <span class="btn btn--primary plancard__btn">Lo quiero</span>

<span class="whatsapp-icon">
  <Image 
    src={WhatsAppImage}
    alt="WhatsApp"
    width={40}
    height={40}
  />
</span>
</a>
</section>
</div>
